<h1>Comment</h1>
<% if user_signed_in? %>
  <%= simple_form_for [item, Comment.new] do |f| %>
    <%= f.input :comment %>
    <%= f.submit "Submit comment", class: "super-button" %>
  <% end %>
<% end %>
  <% comments = item.comments.sort_by(&:updated_at).reverse %>
  <% comments.each do |comment| %>
    <div class="principalecomment">
      <div class="usernameclass">
        <%= link_to compilations_path(user_id: item.compilation.user.id) do %>
          <%= image_tag comment.user.photo, class: "avatar" %>
        <% end  %>
        <h4>By <%= comment.user.username %></h4>
      </div>
      <div class="commentuser">
        <%= comment.comment %>
      </div>
      <div class="datecomment">
        On <%= comment.created_at.strftime("%B-%d-%Y at %T") %>
      </div>
    </div>
  <% end %>
